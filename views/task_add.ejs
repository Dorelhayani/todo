<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Adding Activity</title>
    <style>
        td,th{border: 1px solid black;}
    </style>
</head>
<body>
<center>
    <h1>Add Task</h1>
    <form action="" method="post">
        <table>
            <tr>
                <th>task</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Save</th>
            </tr>
            <tr>
                <td>
                    <select name="category_id" id="category_id">
                        <% for(let ctrs of categories){ %>
                            <option value="<%= ctrs.id %>"><%= ctrs.name %></option>
                        <% } %>
                    </select>
                </td>
                <td> <textarea name="description" id="description" value="<%= data.description %>"> </textarea> </td>
                <td> <input type="date" name="due_date" id="due_date" value="<%= data.due_date %>" /> </td>
                <td><button name="btn" value="1">Save</button> </td>
            </tr>
        </table>
    </form>
</center>
</body>
</html>