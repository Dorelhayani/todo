<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <style>
        td,th{border: 1px solid black;}
    </style>
</head>
<body>
<center>
    <title><%= page_title %></title>
    <H1><%= page_title %></H1>
    <label for="task_add">Add Task</label>
    <button onclick="location.href='/task/plan'">Add Task</button>
    <table>
        <tr>
            <td colspan="55">
                <form action="" method="get">

                    <label for="description">Free Text</label>
                    <input type="text" name="free_txt" id="free_txt" value="<% filter_params.free_txt %>">

                    <label for="category_id">categories:</label>
                    <select name="crs_id" id="crs_id">

                        <option value="-1"
                                <% if (filter_params.category_id === -1){__appened('selected = "1"'); }%>>
                            ----categories list----
                        </option>

                        <% for (let ctrs of categories) { %>
                            <option value="<%= ctrs.id %>"
                                    <% if (filter_params.category_id === ctrs.id){__appened('selected = "1"'); }%>>
                                <%=ctrs.name%></option>
                        <% } %>

                    </select>
                    <button>Filter</button>
                </form>
            </td>
        </tr>
    </table>
    <br>
    <br>
    <table>
        <tr>
            <th>Category</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Done</th>
        </tr>
        <% for(let tsk of task_data){ %>
            <tr>
                <td><%= category_name[tsk.category_id] %></td>
                <td><%= tsk.description %></td>
                <td><%= tsk.nice_date %></td>
                <td><%= tsk.done %></td>

                <td colspan="100" class="centered">
                    <form action="" method="get">
                        <% if (page > 0) { %> <button name="p" value="<%= page-1 %>">Back</button> <% }%>
                        Page  <%= page+1%> / <%= total_pages+1 %>

                        <% if(page < total_pages) { %>
                            <button name="p" value="<%= page+1 %>">Next Page</button>
                        <% } %>
                    </form>
            </tr>
        <% } %>
    </table>
</center>
</body>
</html>